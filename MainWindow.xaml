<Window x:Class="CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CourseProject.Pages"
        mc:Ignorable="d" 
        Title="DoorDash" Height="720" Width="1080" WindowStartupLocation="CenterScreen" Background="Transparent"
        AllowsTransparency="False"
        Icon="Images/doordash logo circle.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Border Background="#ffffff"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Name="FrmMain">
            </Frame>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Image Width="255"
                       Height="73"
                       Source= "/Images/doordash_logo.png"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
